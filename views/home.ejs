<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%=title%></title>
    <style>
    .input-form {
        margin: 0px;
        margin-left: 40%;
        margin-top: 10%;
    }
    /* #file-input {
        height: 150px;
        width: 60px;
    } */
    </style>
</head>
<body>
    <div class="input-form">
        <form action="/uploadcsv" method="POST" enctype="multipart/form-data">
            <input type="file" id="file-input" name="avatar">
            <button>Upload</button>

        </form>
        <div>
            <ul>
                <% for(let i of upload){ %> 
                <li> 
                    <div class = "details">
                        <a href="/display/?id=<%= i._id %>"> <p><%= i.avatar %> </p> </a> 
                    </div>
                 </li>
         
                 <% } %>
             </ul>
        </div>
    </div>
</body>
</html>